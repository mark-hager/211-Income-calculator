{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "programs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "requirements": {
            "type": "object",
            "properties": {
              "max_ami_percentage": { "type": "number" },
              "max_fpl_percentage": { "type": "number" },
              "max_smi_percentage": { "type": "number" },
              "children_in_household": { "type": "boolean" }
            },
            "anyOf": [
              { "required": ["max_ami_percentage"] },
              { "required": ["max_fpl_percentage"] },
              { "required": ["max_smi_percentage"] }
            ]
          },
          "region": { "type": "string" }
        },
        "required": ["name", "description", "requirements", "region"]
      }
    }
  },
  "required": ["programs"]
}
